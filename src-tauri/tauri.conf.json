{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "identifier": "com.applydiff.app",
  "build": {
    "frontendDist": "../"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "ApplyDiff",
  "version": "0.1.0",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ApplyDiff",
        "width": 1120,
        "height": 800,
        "minWidth": 855,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  }
}