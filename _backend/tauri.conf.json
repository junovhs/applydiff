{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "identifier": "com.applydiff.app",
  "build": {
    "frontendDist": "../app"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../_assets/icons/32x32.png",
      "../_assets/icons/128x128.png",
      "../_assets/icons/128x128@2x.png",
      "../_assets/icons/icon.icns",
      "../_assets/icons/icon.ico"
    ]
  },
  "productName": "ApplyDiff",
  "version": "0.1.0",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ApplyDiff",
        "width": 1120,
        "height": 800,
        "minWidth": 855,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "clipboard-manager:allow-read-text",
            "clipboard-manager:allow-write-text"
          ]
        }
      ]
    }
  }
}